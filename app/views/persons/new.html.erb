<div class="col-md-6 col-md-offset-3">
  <h1>Добавить пользователя</h1>
  <%= form_tag(controller: 'persons', action: 'create', method: 'post') do   %>
    <div class="form-group">
      <%= label_tag(:name, "ФИО:") %>
      <%= text_field_tag :name, '', class: 'form-control' %>
    </div>
    <div class="form-group">
      <%= label_tag(:email) %>
      <%= email_field_tag :email, '', class: 'form-control' %>
    </div>
    <div class="form-group">
      <%= label_tag(:date_of_birth, "Дата рождения") %>
      <%= date_field_tag :date_of_birth, '', class: 'form-control' %>
    </div>
    <div class="form-group">
      <%= label_tag(:salary, "Зарплата:") %>
      <%= number_field_tag :salary, '', class: 'form-control' %>
    </div>
    <%= submit_tag 'Сохранить', class: "btn btn-primary btn-sm" %>
  <% end %>
 </div>
