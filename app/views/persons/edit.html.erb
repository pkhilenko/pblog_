<div class="col-md-6 col-md-offset-3">
<% if @person %>
<h1>Изменить <%= @person.id %>: <%= @person.name %> </h1>
      Введите email:
    <%= form_tag(controller: 'persons', action: 'update', method: :patch ) do   %>
      <%= email_field :email, class: 'form-control' %>
      <%= hidden_field_tag :id, value: @person.id %>
      <%= submit_tag "Обновить", class: "btn btn-primary" %>

    <% end %>
    <% end %>
 </div>
