<div class="col-md-6 col-md-offset-3">
<% if @user %>
<h1>Изменить <%= @user['id'] %>: <%= @user['user_name'] %> </h1>
      Введите email:
    <%= form_tag(controller: 'users', action: 'update', method: :put ) do   %>
      <%= email_field :email, class: 'form-control', value: @user['user_name'] %>
      <%= hidden_field_tag :id, value: @user['id'] %>
      <%= submit_tag "Обновить", class: "btn btn-primary" %>

    <% end %>
    <% end %>
 </div>
