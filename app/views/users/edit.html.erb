<div class="col-md-6 col-md-offset-3">
<h1>Изменить <%= @user['id'] %>: <%= @user['name'] %> </h1>
      Введите email:
    <%= form_tag(controller: 'users', action: 'update', method: :put ) do   %>
      <%= email_field :email, class: 'form-control', value: @user['name'] %>
      <%= submit_tag "Обновить", class: "btn btn-primary" %>
    <% end %>
 </div>
